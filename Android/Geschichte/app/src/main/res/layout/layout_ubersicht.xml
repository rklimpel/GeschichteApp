    <!--Marktwirtschaft Menu-->


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Soziale Marktwirtschaft"
            android:textSize="30sp"
            android:textAlignment="center"
            android:gravity="center" />

    </android.support.v7.widget.CardView>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@android:drawable/divider_horizontal_dim_dark"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="10dp"
        android:background="@color/icons"
        android:id="@+id/btn_markt_grundsätze"
        android:text="Grundsätze (nach Erhard)"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="10dp"
        android:background="@color/icons"
        android:id="@+id/btn_markt_entwicklung"
        android:text="Wirtschaftsentwicklung BRD"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@android:drawable/divider_horizontal_dim_dark"
        android:layout_marginTop="5dp"/>


    <!--Plannwirtschaft Menu-->


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Planwirtschaft"
            android:textSize="30sp"
            android:textAlignment="center"
            android:gravity="center" />

    </android.support.v7.widget.CardView>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@android:drawable/divider_horizontal_dim_dark"
        android:layout_marginBottom="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="10dp"
            android:background="@color/icons"
            android:id="@+id/btn_plan_kommentare"
            android:text="Kommentare zur Planwirtschaft"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="10dp"
            android:background="@color/icons"
            android:id="@+id/btn_plan_definition"
            android:text="Definition"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="10dp"
            android:background="@color/icons"
            android:id="@+id/btn_plan_howto"
            android:text="Wie funktioniert Planwirtschaft?"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="10dp"
            android:background="@color/icons"
            android:id="@+id/btn_plan_procon"
            android:text="Vorteile und Nachteile"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="10dp"
            android:background="@color/icons"
            android:id="@+id/btn_plan_ddr"
            android:text="Planwirtschaft in der DDR und heute"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="10dp"
            android:background="@color/icons"
            android:id="@+id/btn_plan_important"
            android:text="Zusammenfassung / Wichtiges"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@android:drawable/divider_horizontal_dim_dark"
        android:layout_marginTop="5dp"/>

</LinearLayout>